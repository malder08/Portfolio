//Challenge 5
#include <stdio.h>
#include <iostream>
using namespace std;

int main()
{
    double height, weight, bmi;

    //prompt user for weight and height
    cout << "Enter your height in inches: ";
    cin >> height;
    cout << "Enter your weight in pounds: ";
    cin >> weight;

    //calculate bmi
    bmi = weight * 703 / (height * height);

    //determine if they are optimal weight
    if (bmi > 25)
    {
        cout << "You are considered overweight.";
    }
    else if (bmi > 18.5)
    {
        cout << "You are of optimal weight.";
    }
    else
    {
        cout << "You are underweight.";
    }

}



//Challenge 6
#include <stdio.h>
#include <iostream>
using namespace std;

int main()
{
    //declare variables
    double weight, mass;

    //prompt user for mass
    cout << "Enter the mass of the object: ";
    cin >> mass;

    //calculate weight
    weight = mass * 9.8;

    cout << "The weight of the object is " << weight << " newtons.\n";

    //determine whether the object is too heavy or too light
    if (weight > 1000)
    {
        cout << "The object is too heavy.";
    }
    else if (weight < 10)
    {
        cout << "The object is too light.";
    }
    else
    {
      cout << "The object is fine.";
    }

}
